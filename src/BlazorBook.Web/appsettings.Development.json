{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=blazorbook.db"
  },
  "Storage": {
    "Mode": "EFCore"
  },
  "Database": {
    "SeedDemo": true
  },
  "Jwt": {
    "SecretKey": "development-secret-key-at-least-32-characters-long-for-hmac",
    "Issuer": "BlazorBook.Web",
