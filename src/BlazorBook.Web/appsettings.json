{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=blazorbook.db"
  },
  "Storage": {
    "Mode": "EFCore"
  },
  "Database": {
    "SeedDemo": true
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-chars-long-change-in-production",
    "Issuer": "BlazorBook.Web",
    "Audience": "BlazorBook.Api",
    "ExpirationMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
