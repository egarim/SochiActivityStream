@using BlazorBook.Web.Components.Dialogs
@using SocialKit.Components.Abstractions
@inherits LayoutComponentBase
@inject ICurrentUserService CurrentUser

<div class="x-shell">
    <TopNav />

    <div class="x-shell__body">
        @if (CurrentUser.IsAuthenticated)
        {
            <aside class="x-shell__rail x-shell__rail--left" aria-label="Primary navigation">
                <LeftSidebar />
            </aside>
        }

        <main class="x-shell__feed" role="main">
            @Body
        </main>

        @if (CurrentUser.IsAuthenticated)
        {
            <aside class="x-shell__rail x-shell__rail--right" aria-label="Activity highlights">
                <RightSidebar />
            </aside>
        }
    </div>
</div>

<DialogHost />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>
