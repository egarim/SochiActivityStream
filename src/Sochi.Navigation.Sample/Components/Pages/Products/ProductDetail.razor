@page "/product-detail"
@inherits MvvmComponentBase<ProductDetailViewModel>
@rendermode InteractiveServer

<PageTitle>@VM.Title</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@VM.Title</h3>
        <CommandButton Command="@VM.GoBackCommand" CssClass="btn btn-secondary">
            Back to List
        </CommandButton>
    </div>

    @if (VM.IsBusy)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (VM.Product != null)
    {
        <div class="card">
            <div class="card-header">
                <h5>Product Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Name</label>
                        <input type="text" class="form-control" value="@VM.Product.Name"
                               @oninput="@(e => { VM.Product.Name = e.Value?.ToString() ?? ""; VM.HasUnsavedChanges = true; })" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Category</label>
                        <input type="text" class="form-control" value="@VM.Product.Category"
                               @oninput="@(e => { VM.Product.Category = e.Value?.ToString() ?? ""; VM.HasUnsavedChanges = true; })" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Price</label>
                        <input type="number" class="form-control" value="@VM.Product.Price" step="0.01"
                               @oninput="@(e => { if (decimal.TryParse(e.Value?.ToString(), out var p)) { VM.Product.Price = p; VM.HasUnsavedChanges = true; } })" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Stock</label>
                        <input type="number" class="form-control" value="@VM.Product.Stock"
                               @oninput="@(e => { if (int.TryParse(e.Value?.ToString(), out var s)) { VM.Product.Stock = s; VM.HasUnsavedChanges = true; } })" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Description</label>
                    <textarea class="form-control" rows="3"
                              @oninput="@(e => { VM.Product.Description = e.Value?.ToString() ?? ""; VM.HasUnsavedChanges = true; })">@VM.Product.Description</textarea>
                </div>
                <div class="d-flex gap-2">
                    <CommandButton Command="@VM.SaveCommand" CssClass="btn btn-success">
                        Save Changes
                    </CommandButton>
                    @if (VM.HasUnsavedChanges)
                    {
                        <span class="text-warning align-self-center">You have unsaved changes</span>
                    }
                </div>
            </div>
            <div class="card-footer text-muted">
                Created: @VM.Product.CreatedDate.ToString("g")
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Product not found
        </div>
    }
</div>
