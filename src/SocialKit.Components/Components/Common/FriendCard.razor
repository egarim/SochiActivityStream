@* Friend Card Component using MudBlazor *@
@using SocialKit.Components.ViewModels

<MudCard Class="sk-friend-card" Elevation="2" @onclick="HandleClick" Style="cursor:pointer;">
    <MudCardContent>
        <div class="d-flex flex-column align-items-center p-3">
            <Avatar ImageUrl="@User?.AvatarUrl"
                    Name="@User?.DisplayName"
                    Size="AvatarSize.Large"
                    CustomSize="80" />
            <MudText Typo="Typo.subtitle1" Class="mt-2 mb-1">@(User?.DisplayName ?? "Unknown")</MudText>
            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <MudText Typo="Typo.body2" Class="mud-text-secondary mb-2">@Subtitle</MudText>
            }
            @if (ShowActions)
            {
                <div class="d-flex flex-column w-100 gap-1">
                    @if (ShowAddFriend)
                    {
                        <MudButton StartIcon="@Icons.Material.Filled.PersonAdd"
                                   Color="Color.Primary"
                                   Variant="Variant.Filled"
                                   Size="Size.Small"
                                   FullWidth="true"
                                   OnClick="HandleAddFriend">Add Friend</MudButton>
                    }
                    @if (ShowRemove)
                    {
                        <MudButton StartIcon="@Icons.Material.Filled.PersonRemove"
                                   Color="Color.Default"
                                   Variant="Variant.Outlined"
                                   Size="Size.Small"
                                   FullWidth="true"
                                   OnClick="HandleRemove">Remove</MudButton>
                    }
                </div>
            }
        </div>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public FriendInfo? User { get; set; }
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public bool ShowActions { get; set; } = false;
    [Parameter] public bool ShowAddFriend { get; set; } = false;
    [Parameter] public bool ShowRemove { get; set; } = false;
    [Parameter] public EventCallback<FriendInfo?> OnClick { get; set; }
    [Parameter] public EventCallback<FriendInfo?> OnAddFriend { get; set; }
    [Parameter] public EventCallback<FriendInfo?> OnRemove { get; set; }
    
    private async Task HandleClick()
    {
        if (OnClick.HasDelegate)
            await OnClick.InvokeAsync(User);
    }
    
    private async Task HandleAddFriend()
    {
        if (OnAddFriend.HasDelegate)
            await OnAddFriend.InvokeAsync(User);
    }
    
    private async Task HandleRemove()
    {
        if (OnRemove.HasDelegate)
            await OnRemove.InvokeAsync(User);
    }
}
