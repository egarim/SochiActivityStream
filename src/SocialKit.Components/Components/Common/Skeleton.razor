@* Skeleton loading placeholder component using MudBlazor *@

@if (Type == SkeletonType.PostCard)
{
    <MudCard Class="sk-skeleton-card mb-3" Elevation="2">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudSkeleton SkeletonType="MudBlazor.SkeletonType.Circle" Width="40px" Height="40px" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudSkeleton Width="40%" Height="14px" />
                <MudSkeleton Width="25%" Height="12px" Class="mt-1" />
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudSkeleton Width="100%" Height="14px" />
            <MudSkeleton Width="90%" Height="14px" Class="mt-2" />
            <MudSkeleton Width="75%" Height="14px" Class="mt-2" />
        </MudCardContent>
    </MudCard>
}
else if (Type == SkeletonType.Avatar)
{
    <MudSkeleton SkeletonType="MudBlazor.SkeletonType.Circle" Width="40px" Height="40px" />
}
else if (Type == SkeletonType.Text)
{
    <MudSkeleton Width="@(Width ?? "100%")" Height="14px" />
}
else if (Type == SkeletonType.Card)
{
    <MudCard Class="sk-skeleton-card mb-3" Elevation="2">
        <MudCardContent>
            <MudSkeleton Width="100%" Height="200px" />
            <div class="mt-3">
                <MudSkeleton Width="60%" Height="14px" />
                <MudSkeleton Width="40%" Height="12px" Class="mt-2" />
            </div>
        </MudCardContent>
    </MudCard>
}
else if (Type == SkeletonType.ConversationItem)
{
    <div class="d-flex align-items-center gap-2 p-2">
        <MudSkeleton SkeletonType="MudBlazor.SkeletonType.Circle" Width="40px" Height="40px" />
        <div class="flex-grow-1">
            <MudSkeleton Width="50%" Height="14px" />
            <MudSkeleton Width="75%" Height="12px" Class="mt-1" />
        </div>
    </div>
}

@code {
    [Parameter] public SocialKit.Components.Components.Common.SkeletonType Type { get; set; } = SocialKit.Components.Components.Common.SkeletonType.Text;
    [Parameter] public string? Width { get; set; }
    [Parameter] public int Count { get; set; } = 1;
}
